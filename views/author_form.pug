extends layout 
block content 
    h1=title 
    form(action='' method='POST')
        .form-group 
            label(for='first_name') Fist name: 
            input#first_name.form-control(type='text' placeholder='name' name= 'first_name' required= 'true' value=(undefined==author ? '' : author.first_name))
            label(for='family_name') family name: 
            input#family_name.form-control(type='text' placeholder='lname' name= 'family_name' required= 'true' value=(undefined===author ? '' : author.family_name) )
        .form-group 
            label(for='date_of_birth') Date of birth: 
            input#date_of_birth.form-control(type= 'date' name='date_of_birth' value= (undefined===author ? '' : author.date_of_birth))
            button.btn.btn-primary(type='submit') Submit 
        if errors 
            ul 
                for error in errors 
                    li!=error.msg